{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
  },
  "include": ["packages/flip-toolkit", "packages/react-flip-toolkit"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "example",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "__tests__",
  ]
}
